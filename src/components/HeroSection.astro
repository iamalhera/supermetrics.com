---
import { Image } from "astro:assets";
import Navbar from "./Navbar.astro";
import { images } from "../constants";

---

<section class="heroSection__parent relative mt-[68px]">
    <Navbar />
    <div class="heroSection pt-24 bg-gradient-to-b from-[#deeefe] to-white">
        <div class="flex items-center justify-center gap-16">
            <!-- Left Side Text -->
            <div class="max-w-2xl space-y-4 ml-auto mb-16">
                <h1 class="text-5xl font-semibold text-gray-900">
                    Sync Your Marketing <br/>
                    Data to
                    <span class="inline-flex items-center">
                        <span class="text-[#4285F4]">G</span>
                        <span class="text-[#EA4335]">o</span>
                        <span class="text-[#FBBC05]">o</span>
                        <span class="text-[#4285F4]">g</span>
                        <span class="text-[#34A853]">l</span>
                        <span class="text-[#EA4335]">e</span>
                        <span class="text-[#5F6368] ml-2">Workspace</span>
                    </span>
                </h1>
                <p class="text-[#697586]">
                    With the SuperMetrics Workspace add-on, access all your
                    connected marketing and sales accounts directly in Google
                    Sheets, Slides, and everywhere else.
                </p>
                <div class="button-group flex gap-2">
                    <button
                        class="w-[23%] px-6 py-2 flex items-center justify-between bg-[#1B91F0] text-white rounded-md hover:bg-blue-700 transition-all"
                    >
                        Install Now
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 14 14"
                            ><path
                                fill="currentColor"
                                fill-rule="evenodd"
                                d="M7 2H2.5a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7a1 1 0 1 1 2 0v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 0 11.5v-9A2.5 2.5 0 0 1 2.5 0H7a1 1 0 0 1 0 2M9.538.309A.5.5 0 0 1 10 0h3.5a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-.854.354L12.104 3.31L7.707 7.707a1 1 0 0 1-1.414-1.414l4.396-4.397L9.646.854a.5.5 0 0 1-.108-.545"
                                clip-rule="evenodd"></path></svg
                        >
                    </button>
                    <button
                        class="px-4 py-2 border text-sm font-semibold text-gray-700 hover:text-gray-900 rounded-md hover:bg-gray-100 transition-all"
                        >Learn More</button
                    >
                </div>
            </div>

            <!-- Right Side Image/Gradient Effect -->
            <div class="relative h-full rounded-lg overflow-hidden">
                <Image
                    loading="eager"
                    src={images.heroImg}
                    alt="Workspace"
                />
            </div>
        </div>
    </div>

    <!-- hero another section which is company section -->
    <section class="border-t-2 border-b-2 border-gray-300">
        <div
            class="w-[80%] m-auto border-l-2 border-r-2 border-gray-300 relative"
        >
            <div
                class="w-full flex flex-col item-center justify-center gap-8 py-20"
            >
                <p
                    class="geist mono text-center font-['Geist_Mono'] text-gray-500"
                >
                    Trusted by 5000+ marketing professionals
                </p>
                <div class="flex justify-center items-center gap-24">
                    <Image
                        class="cursor-pointer"
                        src={images.companyOne}
                        alt="Company 1"
                    />
                    <Image
                        class="cursor-pointer"
                        src={images.companyTwo}
                        alt="Company 2"
                    />
                    <Image
                        class="cursor-pointer"
                        src={images.companyThree}
                        alt="Company 3"
                    />
                    <Image
                        class="cursor-pointer"
                        src={images.companyFour}
                        alt="Company 4"
                    />
                    <Image
                        class="cursor-pointer"
                        src={images.companyFive}
                        alt="Company 5"
                    />
                    <Image
                        class="cursor-pointer"
                        src={images.companySix}
                        alt="Company 6"
                    />
                </div>
            </div>
            {/* top right L-shape*/}
            <div class="absolute top-0 -right-0.5 w-[2px] h-3 bg-black"></div>
            <div class="absolute -top-[2px] -right-0.5 h-[2.5px] w-3 bg-black"></div>

            {/* bottom left L-Shape */}
            <div class="absolute bottom-0 -left-0.5 w-[2px] h-3 bg-black"></div>
            <div class="absolute -bottom-[3px] -left-0.5 h-[2.5px] w-3 bg-black"></div>

            {/* circle top left */}
            <div
                class="absolute -top-1.5 -left-1.5 w-3 h-3 bg-white rounded-full border-2 border-gray-500"
            >
            </div>
            {/* circle bottom right */}
            <div
                class="absolute -right-1.5 -bottom-2 w-3 h-3 bg-white rounded-full border-2 border-gray-500"
            >
            </div>
        </div>
    </section>

    <!-- marketing data and google apps folders strcuture -->
    <section class="border-t-2 border-b-2 border-gray-300">
        <div class="w-[80%] m-auto border-l-2 border-r-2 border-gray-300">
            <!-- google name description -->
            <div class="bg-gradient-to-b from-[#edeff1] to-white py-8">
                <h3 class="text-4xl text-[#212F40] text-center font-semibold">
                    Access all your marketing data <br /> without leaving
                </h3>
                <h1
                    class="text-4xl font-semibold text-gray-900 text-center py-5"
                >
                    <span class="inline-flex items-center">
                        <span class="text-[#4285F4]">G</span>
                        <span class="text-[#EA4335]">o</span>
                        <span class="text-[#FBBC05]">o</span>
                        <span class="text-[#4285F4]">g</span>
                        <span class="text-[#34A853]">l</span>
                        <span class="text-[#EA4335]">e</span>
                        <span class="text-[#5F6368] ml-2 font-normal"
                            >Workspace</span
                        >
                    </span>
                </h1>

            </div>
            <!-- apps containers floating on hovering -->
            <div class="parent rounded-t-xl p-2 border-2  w-full ">
                <div class="child relative flex h-[215px]">
                    <Image title="Google Docs" class="absolute hover:cursor-pointer h-[98%] top-1.5 hover:-top-6" src={images.GDoc} alt="G Doc" />
                    <Image title="Google Notes"  class="absolute hover:cursor-pointer left-[14.25%] hover:-top-6" src={images.GNotes} alt="G Notes" />
                    <Image title="Google Sheets"  class="absolute hover:cursor-pointer left-[28.5%] hover:-top-6" src={images.GSheet} alt="G Sheet" />
                    <Image title="Google Mail"  class="absolute hover:cursor-pointer left-[43.5%] hover:-top-6" src={images.GMail} alt="G Mail" />
                    <Image title="Google Calender"  class="absolute hover:cursor-pointer left-[58%] hover:-top-6" src={images.GCalender} alt="G Calender" />
                    <Image title="Google Drive"  class="absolute hover:cursor-pointer left-[72.5%] hover:-top-6" src={images.GDrive} alt="G Drive" />

                </div>
            </div>
        </div>
    </section>

    <!-- Looking for Data Studio < Check it out > -->
    <section class="border-t-2 border-b-2 border-gray-300">
        <div
            class="w-[80%] m-auto border-l-2 border-r-2 border-gray-300 py-7 relative"
        >
            <div class="flex gap-5 justify-center w-full items-center">
                <div class="font-['Geist_Mono'] text-gray-600">
                    Looking for <span class="text-black font-bold"
                        >DataStudio</span
                    >?
                </div>
                <button
                    class="px-3 py-2 border border-gray-400 font-[500] text-[#212F40] rounded-xl hover:bg-gray-200"
                    >Check it out</button
                >
            </div>
            {/* top right L-shape*/}
            <div class="absolute top-0 -right-0.5 w-[2px] h-3 bg-black"></div>
            <div class="absolute -top-[2px] -right-0.5 h-[2.5px] w-3 bg-black"></div>

            {/* bottom left L-Shape */}
            <div class="absolute bottom-0 -left-0.5 w-[2px] h-3 bg-black"></div>
            <div class="absolute -bottom-[3px] -left-0.5 h-[2.5px] w-3 bg-black"></div>

            {/* circle top left */}
            <div
                class="absolute -top-2 -left-1.5 w-3 h-3 bg-white rounded-full border-2 border-gray-500"
            >
            </div>
            {/* circle bottom right */}
            <div
                class="absolute -right-2 -bottom-2 w-3 h-3 bg-white rounded-full border-2 border-gray-500 z-10"
            >
            </div>
        </div>
    </section>
</section>
